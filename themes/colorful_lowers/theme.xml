<theme>
    <formatVersion>4</formatVersion>

	<view name="system, basic, detailed">
	
		<image name="background" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
		
		<image name="footer" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.1</size>
			<path>./art/white.png</path>
			<color>ffffff88</color>
		</image>

		<helpsystem name="help">
			<pos>0.14 0.916</pos>
			<textColor>555555</textColor>
			<iconColor>555555</iconColor>
		</helpsystem>
		
	</view>

	<view name="system">
		<image name="controller" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.25</pos>
			<maxSize>0.222 0.333</maxSize>
			<color>ffffff</color>
		</image>
	</view>

   <view name="basic, detailed">

		<image name="logo_bg" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.267</size>
			<path>./art/white.png</path>
			<color>ffffff88</color>
		</image>

		<!--image name="logo_helper" extra="true">
			<pos>0.5 0.116</pos>
			<origin>0.5 0.5</origin>
			<size>1 0.16</size>
			<size>0.40 0.20</size>
			<path>./art/white.png</path>
			<color>efefef44</color>
		</image-->	

		<image name="logo">
			<pos>0.5 0.1493</pos>
			<maxSize>0.7 0.17</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="gamelist_bg" extra="true">
			<path>./art/white.png</path>
			<color>00000099</color>
			<origin>0 0</origin>
			<pos>0 0.267</pos>
			<size>1 0.634</size>
		</image>

		<textlist name="gamelist">
			<selectorColor>00000000</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffff00</secondaryColor>
			<fontPath>./art/opensans_hebrew_condensed_regular.ttf</fontPath>
			<scrollSound>./art/scroll.wav</scrollSound>
			<fontSize>0.055</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.0125 0.807</pos>
			<size>0.974 0.11</size>
			<alignment>center</alignment>
		</textlist>

	</view>

   <view name="basic">	   
	   
		<textlist name="gamelist">
			<selectorColor>000000aa</selectorColor>
			<pos>0.0125 0.288</pos>
			<size>0.974 0.5833</size>
			<alignment>center</alignment>
		</textlist>	   
   </view>

	<view name="detailed">
		
		<!--image name="image_guide" extra="true">
			<path>./art/white.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.55</pos>
			<size>0.437 0.583</size>
			<color>ff000033</color>
		</image-->

		<image name="md_image">
			<pos>0.5 0.55</pos>
			<!-- Uncomment this for 720x480 resolution -->			
			<maxSize>0.33333 0.5</maxSize>
			<!-- Uncomment this for 800x600 resolution -->
			<!--maxSize>0.375 0.5</maxSize-->
			<origin>0.5 0.5</origin>
		</image>

		<image name="arrowsL" extra="true">
			<pos>0.20 0.55</pos>
			<origin>0.5 0.5</origin>
			<size>0.1875 0.25</size>
			<path>./art/arrows.svg</path>
			<color>ffffff55</color>
		</image>		
		
		<image name="arrowsR" extra="true">
			<pos>0.80 0.55</pos>
			<origin>0.5 0.5</origin>
			<size>0.1875 0.25</size>
			<path>./art/arrows.svg</path>
			<color>ffffff55</color>
		</image>		
				
		<!-- Put them outside of sight!-->
		<text name="lbl_players, lbl_publisher, lbl_playcount, md_lbl_lastplayed, md_lbl_playcount, md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players">
			<pos>1 1</pos>
		</text>

		<text name="md_playcount, md_rating, md_developer, md_publisher, md_genre, md_players">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed, md_releasedate">
			<pos>1 1</pos>
		</datetime>

	</view>

</theme>
